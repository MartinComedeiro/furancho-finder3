# URLs
app.baseURL = http://localhost/

# Seguridad
app.CSRFProtection = true
app.CSRFTokenRandomize = false
app.CSRFHeaderName = X-CSRF-TOKEN

# Session
session.driver = FileHandler
session.expiration = 7200
session.savePath = null
session.cookieName = PHPSESSID
session.cookieDomain = 
session.cookiePath = /
session.cookieSecure = false
session.cookieHttpOnly = true
session.cookieSameSite = Lax
